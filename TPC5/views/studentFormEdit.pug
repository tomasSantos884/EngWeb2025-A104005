block content 
    .w3-card-4
    .header.w3-container.w3-purple
        h2 Student Form

    form.w3-container(method="POST")
        fieldset
            legendMetadata
            label Id
            input.w3-input.w3-round(type="text" name="id" readonly value=`${aluno._id}`)
            label Name
            input.w3-input.w3-round(type="text" name="nome" value=`${aluno.nome}`)
            label Git
            input.w3-input.w3-round(type="text" name="gitlink" value=`${aluno.git}`)

        fieldset
            legend TPC
             each val, i in [1, 2, 3, 4, 5, 6, 7, 8]
                - var tpc = "tpc" + i
                if (tpc in aluno)
                    input.w3-check(type="checkbox" name=`tpc${i}` value="1" checked)
                    label TPC#{i}
                else
                    input.w3-check(type="checkbox" name=`tpc${i}` value="1")
                    label TPC#{i}

        br
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Editar         

    