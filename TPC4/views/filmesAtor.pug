extends layout 

block content 
  .w3-card-4 
    header.w3-container.w3-blue
      h1 Filmes do Ator
    .w3-container 
      if lfilmes.length > 0
        table.w3-table-all 
          tr 
            th Ano 
            th Titulo
            th Elenco 
            th GÃ©neros
            th ops
          each f in lfilmes 
            tr 
              td= f.year
              td= f.title 
              td
                ul.w3-ul 
                  each ator in f.cast 
                    li= ator
              td
                ul.w3-ul 
                  each g in f.genres 
                    li= g
              td 
                ul.w3-ul
                  li.w3-btn
                    a(href= 'edit/' + f.id) Editar
