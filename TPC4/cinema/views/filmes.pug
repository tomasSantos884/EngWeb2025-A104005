extends layout 

block content 
    .w3-card-4 
    header.w3-container.w3-blue 
        h1= title
    .w3-container
        table.w3-table-all 
            tr 
                th Ano 
                th Título 
                th Elenco 
                th Géneros 
                th Options
            each f in filmes 
                tr 
                    td= f.year
                    td= f.title 
                    td 
                        ul.w3-ul 
                            each g in f.cast 
                                li= g

                    td 
                        ul.w3-ul 
                            each g in f.genres 
                                li= g
                    td
                        a(href='/filmes/edit/' + f.title) Edit
                        |
                        a(href='/filmes/delete/' + f.title) Delete
                    

    footer 
